@model IEnumerable<PoshBay.Data.Models.Product>

<div class="text-center">
    <h4>Welcome to PoshBay</h4>
</div>

<div style="align-content:center" class="text-center">
     <h6 class="alert-success">@TempData["Product-Delete-Success"]</h6>
</div>

<div class="row pb-4">
    <p class="text-danger">@TempData["Error"]</p>
    @if (Model.Count() > 0)
    {
        @foreach(var item in Model)
        {
            <div class="card m-2" style="width: 15rem;">
                <img class="card-img-top" src="@item.ImagePath" alt="Card image" />
                <div class="card-body form-control">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text">Price: #@item.Price.ToString(".00")</p> 
                    <div class="w-100 d-flex flex-row">
                        <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-primary mx-lg-2">Details</a>
                        <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h5>Opps! No product added yet</h5>
    }

</div>
