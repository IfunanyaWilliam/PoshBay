@model PoshBay.Data.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger">
                <span class="text-danger">@TempData["Error"]</span>
            </div>
            
            @* Hidden input field for UserRole tpye 
            <input type="hidden" value="@Model.IsAdmin" /> *@

            <div class="form-floating col-12 py-2">
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" class="form-control my-2" autocomplete="username" aria-required="true" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating col-12 py-2">
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" class="form-control my-2" autocomplete="username" aria-required="true" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating col-12 py-2">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control my-2" autocomplete="username" aria-required="true" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating col-12 py-2">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control my-2" autocomplete="on" aria-required="true" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating col-12 py-2">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control my-2" autocomplete="new-password" aria-required="true" type="password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
  
</div>