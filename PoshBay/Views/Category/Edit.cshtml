@model PoshBay.Data.ViewModels.CategoryEditViewModel


<div class="w-100 d-flex justify-content-center">
    <form method="post" asp-controller="Category" asp-action="Edit" class="w-50 ">
        <span>@TempData["Error"]</span>

        <div class="border p-3 mt-5">
            <div class="row pb-3">
                <h2 class="text-primary text-center">Edit Category</h2>
                <hr/>
            </div>
            <div asp-validation-summary="All"></div>
            
            <input  hidden asp-for="CategoryId" value="@Model.CategoryId" />
            <div class="row mb-3">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" value="@Model.Name"/>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            
            <input hidden asp-for="CreatededBy" value="user" />
            <div class="row mb-3">
                <button class="btn btn-success" type="submit">Update</button>
            </div>
       
        </div>
        <div class="mt-5">
            <a asp-action="List" asp-controller="Category">Back to List</a>
        </div>
    </form>

</div>
@section scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}